{
  "name": "Full-Page Screenshot",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Take a full screenshot of the current website.",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Take full-page screenshot"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      }
    }
  },
  "permissions": [ "activeTab" ],
  "icons": {
    "128": "icon-128.png",
    "32": "icon-32.png"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "css": [ "styles.css" ]
    }
  ]
}
